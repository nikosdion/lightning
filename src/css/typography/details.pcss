/* details/summary */

details {
  margin-bottom: var(--hiq-block-element-margin-bottom, 1rem);
}

summary {
  display: list-item;

  &:focus {
    outline: var(--hiq-outline-color, hsl(210, 100%, 85%)) solid var(--hiq-outline-width, 0.2rem);
  }
}
