/* Breadcrumbs */

.breadcrumb {
  display: flex;
  margin-bottom: 1rem;
  padding: .5rem 1rem;
  list-style: none;
  background-color: var(--hiq-breadcrumbs-background-color);

  li {
    margin-inline-end: .5rem;
  }

  li + li + li::before {
    display: inline-block;
    padding-inline-end: .5rem;
    color: var(--hiq-color-gray-5);
    content: "/";
  }
}
